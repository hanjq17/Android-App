<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mypage_username"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_gravity="start"
        android:text="username"
        android:textSize="18sp"


        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mypage_logintime"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:text="logintime"
        android:textSize="18sp"


        />
    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/black"
        android:id="@+id/mypage_banword"
        android:hint="输入要屏蔽的关键词"
        android:textColorHint="@color/gray"/>
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/mypage_buttonban"
        android:layout_gravity="center"
        android:background="@color/my_button"
        android:text="确认"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mypage_alreadyban"
        android:layout_marginTop="20dp"

        android:textColor="@color/black"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:text="当前屏蔽的关键词"
        android:textSize="16sp"


        />

    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/mypage_disbanword"
        android:hint="输入要屏蔽的关键词"
        android:textColorHint="@color/gray"
        />
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/mypage_buttondisban"
        android:layout_gravity="center"
        android:background="@color/my_button"
        android:text="确认"/>


    <Button
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/mypage_clearall"
        android:layout_gravity="center"
        android:background="@color/my_button"
        android:text="清空屏蔽词列表"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>







</LinearLayout>
</ScrollView>